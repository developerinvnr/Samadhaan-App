<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Samadhan" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/colorLogoLightGreen</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/Threedotcolor</item>
    </style>
    <style name="Threedotcolor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/purple_200</item>
    </style>
    <style name="Theme.Samadhan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Samadhan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Samadhan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyleMobileNormal" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:hint">Edit Text Normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextStyleSerialNumber" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLength">50</item>
        <item name="android:digits">0123456789,a bcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-/</item>
        <item name="android:hint">Edit Text Normal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="custom_radio_button" parent="radio_button">
        <item name="android:buttonTint">@color/colorLogoLightGreen</item>
    </style>
    <style name="linear_layout_vertical" parent="linear_layout">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linear_layout_horizontal" parent="linear_layout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radio_group_vertical" parent="radio_group">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="radio_group_horizontal" parent="radio_group">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>