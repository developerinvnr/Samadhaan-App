<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:padding="16dp"
    android:id="@+id/ll_main"
    android:background="@drawable/card_background_lighttoolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_assetImage"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:id="@+id/tv_assetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asset Name"
                android:textAppearance="@style/desktop"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_assetIsByod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/desktop"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ticket_title"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:text="Title..."
                    android:textAppearance="@style/desktop16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:id="@+id/tv_ticket_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textAppearance="@style/label_text2"
                        android:textColor="#FFF"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/label_text2"
                    android:gravity="start"
                    android:layout_marginStart="5dp"
                    android:text="Time To Resolve" />

                    <TextView
                        android:id="@+id/tv_timeToResolve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:textAppearance="@style/desktop16sp"
                        android:text="Not yet mentioned" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="end"
                        android:textAppearance="@style/label_text2"
                        android:text="Priority" />

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="end"
                        android:textAppearance="@style/desktop16sp"
                        android:text="priority" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/label_text2"
                android:text="Last Comment" />

            <TextView
                android:id="@+id/tv_lastComment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="start"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/label_text2"
                android:text="No last comment" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Raised by - " />

            <TextView
                android:id="@+id/tv_raisedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Sourabh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="@style/label_text2"
                android:text="Date - " />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Ticket Date" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_raisedfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Raised for - " />

            <TextView
                android:id="@+id/tv_raisedFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Assigned to - " />

            <TextView
                android:id="@+id/tv_assignto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Sourabh" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_visitDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="Visit Date - " />

            <TextView
                android:id="@+id/tv_visitdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="@style/label_text2"
                android:text="" />

            <ImageView
                android:id="@+id/iv_visitdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/alarm__24"
                android:text="" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ticketID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/tickets_in_"
                android:gravity="start"
                android:text="Ticket" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_editTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_ticket"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/tickets_in_"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/delete"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:text="Withdraw" />

        <TextView
            android:id="@+id/tv_edit_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/tickets_in_"
            android:drawableStart="@drawable/edit_document"
            android:drawablePadding="5dp"
            android:gravity="end"
            android:text="Edit" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>