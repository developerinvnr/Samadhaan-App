<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_alerttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:text="Do you want to Final Submit?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxLines="10"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="Please note that once you click 'YES' button \n you cannot edit target details Are you sure want to continue!"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:ems="10"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"
        android:orientation="horizontal">

        <Button
            android:id="@+id/no_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No, Cancel"
            android:textAllCaps="false"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/yes_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes, Submit it"
            android:textAllCaps="false"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>