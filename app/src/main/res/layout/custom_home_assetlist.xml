<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="55dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_asseticon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:backgroundTint="#49454F"/>

    <TextView
        android:id="@+id/tv_assetcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Desktop"
        android:textAppearance="@style/tickets_in_"
        android:textSize="12sp"
        android:translationY="-0.97sp" />

    <TextView
        android:id="@+id/tv_assetID"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="DSKT0003"
        android:textAppearance="@style/tickets_in_"
        android:textSize="8sp"
        android:translationY="-0.97sp" />


</LinearLayout>